<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%=category.cat_name%></title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
	</head>
	<body>
		<% extend('layout')%> <%if(category.cat_img_url){%>
		<img
			src="<%=category.cat_img_url%>"
			alt="Image of <%= category.cat_name%>"
			style="width: 500px"
		/>
		<%}%>
		<h1 style="display: inline"><%=category.cat_name%></h1>
		<p style="display: inline">- <%=category.cat_desc%></p>

		<hr />
		<%if(item_list.length){%>
		<p>
			<strong>
				Delete the following items before attempting to delete this
				category
			</strong>
		</p>
		<hr />
		<div>
			<h2>Items to Delete:</h2>
			<dl>
				<%item_list.forEach(function(item){%>
				<dt><a href="<%=item.url%>"><%=item.item_name%></a></dt>
				<dd><%=item.item_desc%></dd>
				<%})%>
			</dl>
		</div>
		<%}else{%>
		<p>Do you really want to delete this Category?</p>
		<form action="" method="post">
			<div class="form-group">
				<input
					type="hidden"
					id="catid"
					name="catid"
					class="form-control"
					value="<%=category._id%>"
				/>
			</div>
			<div class="form-group">
				<label for="password">Password to Delete:</label>
				<input
					type="password"
					id="password"
					name="password"
					class="form-control"
				/>
			</div>

			<button class="btn btn-primary" type="submit">Delete</button>
		</form>
		<%}%> <%if(incorrect){%>
		<p>Password was incorrect please try again.</p>
		<%}%>
	</body>
</html>
